#!/usr/bin/env python
import argparse

import eho.server.main as server
from eventlet import wsgi
import eventlet

if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='EHO server')
    parser.add_argument(
        '--dev', action='store_true', dest='dev', help='enable dev mode'
    )
    parser.add_argument(
        '--host', default='', dest='host', help='set host (default: \'\' all)'
    )
    parser.add_argument(
        '-p', '--port', type=int, default=8080, dest='port',
        help='specify http port (default: 8080)'
    )
    parser.add_argument(
        '--log-level, --log_level', default='WARN', dest='log_level',
        help='set logging level (default: WARN)'
    )
    parser.add_argument(
        '--drop-db', action='store_true', dest='drop_db', help='drop db'
    )
    parser.add_argument(
        '--init-db', action='store_true', dest='init_db', help='init db'
    )
    parser.add_argument(
        '--put-defaults', action='store_true', dest='put_defaults',
        help='put defaults into db'
    )

    args = parser.parse_args()
    opts = dict()
    opts['DEBUG'] = args.dev
    opts['LOG_LEVEL'] = args.log_level
    opts['DROP_DB'] = args.drop_db
    opts['INIT_DB'] = args.init_db
    opts['PUT_DEFAULTS'] = args.put_defaults

    app = server.make_app(**opts)

    wsgi.server(eventlet.listen((args.host, args.port), backlog=500), app,
                debug=args.dev)
